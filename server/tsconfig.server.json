{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "./server",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules", "client", "dist"]
  }
  